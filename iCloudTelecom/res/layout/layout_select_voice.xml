<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#232F3C"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="15.0dip"
            android:src="@drawable/voice_logo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent" 
            android:scrollbars="none"
            android:fadingEdge="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip" >

                    <ImageButton
                        android:id="@+id/voip_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginRight="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/voip_selector" />

                    <ImageButton
                        android:id="@+id/video_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/video_call_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_ly"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip" >

                    <ImageButton
                        android:id="@+id/im_sms_selector"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/im_sms_selector" />

                    <RelativeLayout
                        android:id="@+id/voice_delay_group_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/intercom_select"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/intercom_selector" />

                        <ImageButton
                            android:id="@+id/voice_group_chat_selector"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1.0"
                            android:background="@drawable/voice_group_chat_selector" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip" >

                    <ImageButton
                        android:id="@+id/market_outside_call"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:layout_marginRight="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/market_outside_call_selector"
                        android:padding="5dp" />

                    <ImageButton
                        android:id="@+id/voice_verification_code"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/voice_verification_code_selector"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip" >

                    <ImageButton
                        android:id="@+id/ex_consultation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:layout_marginRight="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/ex_consultation_selector"
                        android:padding="5dp" />

                    <ImageButton
                        android:id="@+id/phonebook_backup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/phonebook_backup_selector"
                        android:padding="5dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/setting_selector"
        android:layout_width="50.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="8.0dip"
        android:src="@drawable/setting" />

</RelativeLayout>