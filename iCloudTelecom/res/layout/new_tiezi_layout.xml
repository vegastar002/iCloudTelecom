<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/originTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="知道 -- 问吧"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/titleT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/v5_0_1_blog_editor_content_unfocus_bg"
            android:gravity="left|top"
            android:hint="标题"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="2"
            android:padding="3dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/blankV"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/transparent" />

        <EditText
            android:id="@+id/contentT"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/v5_0_1_blog_editor_content_unfocus_bg"
            android:gravity="left|top"
            android:hint="内容"
            android:inputType="textMultiLine"
            android:padding="3dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/v5_0_1_button_background"
            android:gravity="center_horizontal|center_vertical"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>